<!--detail.wxml-->
<div class="div_top" >
  <view class="top-left" bindtap="jumpToCustomerInfo">
    <image class="userinfo-avatar" src='{{customer.face}}' ></image>
    <view class="info-p">
      <view class="info-top">
        <text class="left_text_name" bindtap="jumpToCustomerInfo">{{customer.customerName}}</text>
        <text class="left_text_1" wx:if="{{customer.sex==0}}">男</text>
        <text class="left_text_1" wx:if="{{customer.sex==1}}">女</text>
        <text class="left_text_1">{{customer.age}}岁</text>
      </view>
      <text class="left_text_name" bindtap="callMobile">{{customer.mobile}}</text>
    </view>
  </view>
  <image class="ic-next" bindtap="jumpToCustomerInfo" style="margin-right:10px" src='../../../assets/images/userinfo/ic_next.png'></image>
</div>


<view class="list">
  <view style="height:80px;"></view>
  <view class="list-ing">
    <view class="imgline"></view>
    <text class="text-ing">进行中的方案</text>
  </view>

  <view class="line-s"></view>

  <navigator class="item-p" wx:for="{{resultList}}" wx:key="{{index}}">
    <view class="item-top" data-exthospitalid="{{item.customerExtHospitalId}}" data-bean="{{item}}" data-doctorid="{{item.doctorId}}" data-templateid="{{item.templateId}}" 
    bindtouchstart="mytouchstart" bindtouchend="mytouchend" bindtap="navigateTo">
      <text wx:if="{{item.doctorId==doctorId}}" class="content-title text-flow">{{item.templateName}}</text>
       <text wx:if="{{item.doctorId!=doctorId}}" class="content-title template-title-gray">{{item.templateName}}</text>
      
      
      <text class="content-text">当前节点：{{item.currentPointName}} {{item.currentPointIndex}}/{{item.allPointNum}}</text>
      <text class="content-text">提交量表：{{item.finishSurvyNum}}/{{item.allSurvyNum}}     阅读须知：{{item.finishNoteNum}}/{{item.allNoteNum}}</text>

      <view class="line"></view>
    </view>

    <view class="item-bottom" data-exthospitalid="{{item.customerExtHospitalId}}" data-doctorid="{{item.doctorId}}" data-templateid="{{item.templateId}}" bindtap="jumpToRecord">
      <view class="line-x"></view>
      <view class="text-record">
        <text wx:if="{{item.doctorId==doctorId}}" class="record-text"> 病程录</text>
        <text wx:if="{{item.doctorId!=doctorId}}" class="record-text-gray"> 病程录</text>
        <view class="text-count">
          <text wx:if="{{item.doctorId==doctorId}}" class="record-text margin-right-10">{{item.recordCount}}</text>
          <text wx:if="{{item.doctorId!=doctorId}}" class="record-text-gray margin-right-10" >{{item.recordCount}}</text>

          <image class="ic-next" src='../../../assets/images/userinfo/ic_next.png'></image>
        </view>

      </view>
    </view>
  </navigator>

  <view style="height:60px;"></view>
</view>
<view class="bottom-btn">

  <view class="btnAdd" bindtap="btnShield">
    <image style="width:20px; height:20px;" wx:if="{{customer.isBlocked==true}}" src="../../../assets/images/ic_has_nochat.png"></image>
    <image style="width:20px; height:20px;" wx:if="{{customer.isBlocked==false}}" src="../../../assets/images/ic_has_chat.png"></image>
    <text class="btnText">屏蔽</text>
  </view>

  <view class="btnAdd margin-left-1" bindtap="btnMark">
    <image style="width:20px; height:20px;" wx:if="{{customer.mark==false}}" src="../../../assets/images/ic_noremark.png"></image>
    <image style="width:20px; height:20px;" wx:if="{{customer.mark==true}}" src="../../../assets/images/ic_hasremark.png"></image>
    <text class="btnText">加标</text>
  </view>

  <text class="btnsend" bindtap="sendTemplate"> 分配方案 </text>
  <text class="btnChat" bindtap="goChat">询问病情</text>
</view>