<!--detail.wxml-->
<div class="div_top">
  <view class="top-left" bindtap="jumpToCustomerInfo">
    <image class="userinfo-avatar" src='{{customer.face}}'></image>
    <view class="info-p">
      <view class="info-top">
        <text class="left_text_name">{{customer.customerName}}</text>
        <text class="left_text_1" wx:if="{{customer.sex==0}}">男</text>
        <text class="left_text_1" wx:if="{{customer.sex==1}}">女</text>
        <text class="left_text_1">{{customer.age}}岁</text>
      </view>
      <text class="left_text_name">{{customer.mobile}}</text>
    </view>
  </view>
  <image class="ic-next" style="margin-right:10px" src='../../../assets/images/userinfo/ic_next.png'></image>
</div>

<view style="height:80px;"></view>
<import src="../../common/doingtemplate.wxml" />
<template is="doingtemplate" data="{{resultList,doctorId}}" />

<view class="bottom-btn">

  <view class="btnAdd" bindtap="btnShield">
    <image style="width:20px; height:20px;" wx:if="{{customer.isBlocked==true}}" src="../../../assets/images/ic_has_nochat.png"></image>
    <image style="width:20px; height:20px;" wx:if="{{customer.isBlocked==false}}" src="../../../assets/images/ic_has_chat.png"></image>
    <text class="btnText">屏蔽</text>
  </view>

  <view class="btnAdd margin-left-1" bindtap="btnMark">
    <image style="width:20px; height:20px;" wx:if="{{customer.mark==false}}" src="../../../assets/images/ic_noremark.png"></image>
    <image style="width:20px; height:20px;" wx:if="{{customer.mark==true}}" src="../../../assets/images/ic_hasremark.png"></image>
    <text class="btnText">加标</text>
  </view>

  <text class="btnsend" bindtap="sendTemplate"> 分配方案 </text>
  <text class="btnChat" bindtap="goChat">询问病情</text>
</view>