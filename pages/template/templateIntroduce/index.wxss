.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 75rpx;
  border-radius: 26rpx;
}

.close-dialog {
  overflow: hidden;
  position: fixed;
  top: 24%;
  right: 0;
  z-index: 9999;
  margin: -180rpx 58rpx;
 
}

