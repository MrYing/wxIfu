  <view class="all-template" bindtap="jumpToAllTemplate">
    <view class="txt-all-template">
      <image style="width:25px;height:25px; vertical-align:middle" src="../../../assets/images/template/ic_all_template.png"></image>
      <text class="txt-template">全部方案</text>
    </view>
    <image style="width:5px;height:10px; vertical-align:middle" src='../../../assets/images/userinfo/ic_next.png'></image>
  </view>
  <view class="my-template">
    <image style="width:25px;height:25px; vertical-align: middle" src="../../../assets/images/template/ic_mytemplate.png"></image>
    <text class="txt-template">个人方案</text>
  </view>

  <view class="item-p" hover-class="weui-cell_active" wx:for="{{resultList}}" wx:key="">
    <view class="item-top">
      <view class="item-top-left" bindtap="navigateTo" data-id="{{item.id}}">
        <text class="item_title text-flow">{{item.templateName}}</text>
        <text class="item_type">{{item.templateType}}</text>
      </view>
      <image wx:if="{{item.status==0}}" bindtap="showTemplateQr" data-bean="{{item}}" style="width:22px;height:22px; vertical-align: middle" src="../../../assets/images/template/ic_my_qrcode_lilte.png"></image>
    </view>
    <view class="item-status">
      <view class="item-bottom">
        <text class="item-type-2" wx:if="{{item.type==0}}"> 私人</text>
        <text class="item-type-2" wx:if="{{item.type==1}}"> 官方</text>
        <text class="item-type-2" wx:if="{{item.type==2}}"> 顾问医生</text>
        <text class="item-type-2" wx:if="{{item.type==3}}">多中心</text>
        <text class="item-type-2" wx:if="{{item.type==4}}">共享</text>
        <text class="item-type-2" wx:if="{{item.type==6}}">科室共享</text>
        <text class="item-type-2" wx:if="{{item.type==7}}">院内共享</text>
        <text class="item-count" wx:if="{{item.customerNum==null||item.customerNum==0}}">患者人数：0</text>
        <text class="item-count" wx:if="{{item.customerNum!=null&&item.customerNum>0}}">患者人数：{{item.customerNum}}</text>
      </view>
      <text class="template-stauts" wx:if="{{item.status==1}}">已停用</text>
    </view>
  </view>
</view>
<!-- 
catchtouchmove="preventTouchMove"  -->
<!--弹窗  -->
<view class="modal-mask" bindtap="hideModal" wx:if="{{showModal}}" catchtouchmove="preventTouchMove"></view>
<view class="modal-dialog" wx:if="{{showModal}}" catchtouchmove="preventTouchMove">

  <view class="dialog-top">
    <text class="dialog-title">{{bean.templateName}}</text>
    <text class="dialog-template-type">{{item.templateType}}</text>
  </view>

  <view class="dialog-center">
    <text class="dialog-qr-hint-text">此二维码在30日({{bean.wxUrlExpireDate}})有效</text>
    <text class="dialog-qr-hint-text">重新进入更新</text>

    <view class="qrcode" catchtouchmove="preventTouchMove">
      <canvas canvas-id="qrcode" catchtouchmove="preventTouchMove" />
    </view>


    <view class="dialog-point">
      <view class="dialog-first">
        <text class="dialog-first-point-text">起始节点：</text>
        <text class="dialog-first-point-value">{{bean.startPoint}}</text>
      </view>

      <view class="dialog-first">
        <text class="dialog-first-point-text">起始日期：</text>
        <text class="dialog-first-point-value">今日</text>
      </view>
    </view>
  </view>
  <view class="btn-look" bindtap="lookCustomer">
    <text class="btn-look-customer">查看患者</text>
  </view>

</view>
<view class="close-dialog" bindtap="closeDialog" wx:if="{{showModal}}">
  <image style="width:25px;height:25px; vertical-align: middle" src="../../../assets/images/template/ic_delete_dialog.png"></image>
</view>



