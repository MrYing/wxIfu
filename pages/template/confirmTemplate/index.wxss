.container {
  height: 100%;
  width: 100%;
}

.customer-info {
  display: flex;
  font-size: 14px;
  margin-top: 5px;
  color: #999;
}

.replate-customer-info{
   display: flex;
  font-size: 14px;
  color: #999;
}

.template-title {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 5px;
}

.template-old-bq {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.template-type {
  display: flex;
  font-size: 14px;
  margin-top: 5px;
  color: #f93;
}

.point-setting {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.txt-first-point {
  margin-top: 1px;
  display: flex;
  font-size: 16px;
  padding: 10px;
  color: #666;
}

.item_type {
  color: #607fb9;
  font-size: 12px;
  margin-left: 10px;
}

/*新方案*/

.new-tempate-p {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.text-new-template {
  font-size: 16px;
  margin-left: 5px;
  color: black;
}

.text-replate-title {
  font-size: 16px;
  color: black;
}
.xian {
  height: 18px;
  width: 4px;
  background-color: #ed992c;
}

.margin-top {
  margin-top: 10px;
}

/*底部发送*/

.bottom-view {
  flex-direction: row;
  vertical-align: middle;
  justify-content: space-between;
  display: flex;
  width: 100%;
  position: fixed;
  padding-top: 10px;
  padding-bottom: 10px;
  bottom: 0;
  background-color: white;
  align-items: center;
}

.text-send {
  font-size: 16px;
  color: #666;
  margin-left: 10px;
}

.btn-send {
  font-size: 16px;
  color: white;
  border-radius: 20px;
  border: 1px solid #f63;
  background-color: #f63;
  height: 40px;
  line-height: 40px;
  text-align: center;
  width: 110px;
  margin-right: 10px;
}

.template-detail {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 5px;
}

.template-name {
  color: black;
  font-size: 16px;
}

.template-type {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.item-type-2 {
  font-size: 12px;
  color: #93de65;
  padding-left: 10px;
  padding-right: 10px;
  background-color: white;
  border-radius: 4px;
  border: 1px solid #93de65;
}

/*终止方案  */

.stop-hint {
  font-size: 12px;
  color: red;
  margin-top: 5px;
  padding: 10px;
}

.bg-white {
  background-color: white;
}

.change-point-p {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 10px;
  margin-top: 1px;
}

.padding-left-10 {
  padding-left: 10px;
}
.margin-top-10 {
  margin-top: 10px;
}
.txt-change-point {
  font-size: 16px;
  color: black;
  vertical-align: middle;
}

.txt-change-date {
  font-size: 16px;
  color: black;
  vertical-align: middle;
  width: 260px;
}
