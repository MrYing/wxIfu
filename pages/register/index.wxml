<view class="register-p">


    <view class="item">
        <text class="text-mobile">手机号:</text>
        <input class="input" type="number" value="{{userName}}" maxlength="11" bindinput="mobileInput" auto-focus="true" placeholder="请输入手机号" />


    </view>

    <view class="item">
        <text class="text-mobile">验证码:</text>
        <input class="input" type="text" value="{{userName}}" maxlength="6" bindinput="codeInput" auto-focus="true" placeholder="请输入验证码" />

        <view class="right-code">
            <view class='xian-code'></view>
            <view class="vcode-btn" bindtap="vcode">{{ c2 || '获取验证码' }}</view>
        </view>
    </view>


    <view class="item">
        <text class="text-mobile">密            码:</text>
        <input class="input" type="text" password='true' value="{{userName}}" maxlength="11" bindinput="passwordInput" auto-focus="true" placeholder="请输入至少6位密码" />
    </view>


    <view class="item">
        <text class="text-mobile">确认密码:</text>
        <input class="input" type="number"  password='true' value="{{userName}}" maxlength="11" bindinput="againPasswordInput" auto-focus="true" placeholder="请再次输入密码" />
    </view>


    <button class="btnRegister" bindtap="btnRegister">注册</button>

</view>