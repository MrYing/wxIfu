/**index.wxss**/

.page {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.qrcode {
  height: 350rpx;
  width: 420rpx;
  display: flex;
  margin-left: 10px;
  justify-content: center;
  align-items: center;
}

.qrcode > canvas {
  width: 400rpx;
  height: 350rpx;
  display: flex;
  justify-content: center;
}

.txt_new_p {
  flex-direction: column;
  display: flex;
  vertical-align: middle;
  margin-left: 10px;
}

.bottom_text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.txt-hint {
  font-size: 14px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin-top: 10px;
  color: #999999;
}

.top {
  display: flex;
  height: 50px;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}

.div_left {
  display: flex;
  flex-direction: row;
  margin-top: 15px;
  vertical-align: middle;
  justify-content: center;
}

.userinfo-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align: middle;
}

.txt_info {
  height: 50px;
  font-size: 0px;
}

.left_text_name {
  font-size: 14px;
  color: black;
}

.left_text_hospital {
  font-size: 12px;
  height: 15px;
  color: black;
}
.bg{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  background-color: #f93
}
.center {
  display: flex;
  width: 250px;
  padding-top: 20px;
  padding-bottom: 20px;
  flex-direction: column;
  justify-content: center;
  background-color: white;
  border-radius: 10px 10px 10px 10px;
  align-items:center;/*垂直居中*/
}
