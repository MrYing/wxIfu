/**index.wxss**/

.page {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.container {
  padding-bottom: 10rpx;
  background: white;
}

.qrcode {
  height: 420rpx;
  height: 420rpx;
  display: flex;
  margin-left: 10px;
  justify-content: center;
  align-items: center;
}

.qrcode > canvas {
  width: 400rpx;
  height: 400rpx;
  display: flex;
  justify-content: center;
}

.txt_new_p {
  flex-direction: column;
  display: flex;
  vertical-align: middle;
  margin-left: 10px;
}

.bottom_text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.txt-hint {
  display: block;
  vertical-align: middle;
  font-size: 14px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: black;
}

.top {
  display: flex;
  height: 50px;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}

.div_left {
  display: flex;
  flex-direction: row;
  margin-top: 15px;
  vertical-align: middle;
  justify-content: center;
  width: 100%;
}

.userinfo-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align: middle;
}

.txt_info {
  height: 50px;
  font-size: 0px;
}

.left_text_name {
  display: block;
  font-size: 14px;
  color: black;
}

.left_text_hospital {
  display: block;
  font-size: 12px;
  height: 15px;
  color: black;
}
