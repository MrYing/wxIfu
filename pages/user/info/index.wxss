.container {
    font: 12px/24px "";
    color: #666;
    padding-left: 10px;
}

.top {
    height: 50px;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.userinfo-avatar {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    vertical-align: middle;
}

.imgleft {
    vertical-align: middle;
    width: 20px;
    height: 20px;
    margin-left: 10px;
    margin-right: 10px;
}

.item {
    height: 50px;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1px;
}

.item_margin_15 {
    height: 50px;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15px;
}

.user_text_value {
    font-size: 14px;
    color: silver;
}

.left_text {
    font-size: 16px;
    color: black;
}

.img_auth {
    width: 15px;
    height: 15px;
    margin-right: 10px;
    margin-left: 10px;
    vertical-align: middle;
}

.img_need {
    vertical-align: middle;
    width: 10px;
    height: 10px;
    margin-left: 10px;
    margin-right: 10px;
}

.user_desc_p {
    background: white;
    vertical-align: middle;
    margin-top: 1px;
    padding-bottom: 10px;
}

.margin-right-10 {
    margin-right: 10px;
}

.margin-left-5 {
    margin-left: 5px;
}

.user_desc_text {
    display: flex;
    margin-left: 10px;
    margin-right: 10px;
    font-size: 14px;
    color: silver;
    flex: 1;
    padding: 5px;
    border-radius: 6px 6px 6px 6px;
    background-color: #f0f0f0;
}

.text-input {
    font-size: 14px;
    color: black;
}

.desc-p {
    display: flex;
}

.img_next {
    width: 5px;
    height: 10px;
    vertical-align: middle;
    margin-right: 10px;
}

.btnSubmit {
    display: flex;
    justify-content: center;
    font-size: 16px;
    width: 100%;
    height: 36px;
    line-height: 40px;
    color: white;
    padding: 3px;
    background-color: #F3BE26;
    text-align: center;
    border-radius: 24px;
    border: 1px #F3BE26 solid;
    margin: 10px;
}
.btn-bottom {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: center;
    vertical-align: middle;
    position: fixed;
    bottom: 0px;
    background-color: #f0f0f0;
}