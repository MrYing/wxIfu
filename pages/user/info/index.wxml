<!--简介-->
<view class="user_desc_p margin-top-15">
  <div class="item">
    <view class='item-left '>
      <text class="left_text">简介</text>
    </view>

    <view class='item-right'>
      <image class="img_auth" wx:if="{{!canEdit}}" src='../../../assets/images/userinfo/ic_correct.png'></image>
    </view>
  </div>


  <view class="desc-p">
    <textarea wx:if="{{canEdit}}" class="input-desc" type="text" value="{{userInfo.doctorDesc}}" maxlength='200' disabled='{{!canEdit}}' bindinput="doctorDescInput" auto-focus="true" placeholder="请输入简介" />

    <text wx:if="{{userInfo.doctorDesc!=null}}" wx:if="{{!canEdit}}" class="input-desc">{{userInfo.doctorDesc}}</text>
  </view>
</view>

<!--提交  -->
<view style='height:90px'></view>
<view class='btn-bottom' wx:if="{{showBtn}}">
  <text class="btnSubmit" bindtap="btnSubmit">提交</text>
</view>