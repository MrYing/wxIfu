<!--pages/auth/result/index.wxml-->
<view class='container'>


  <!--认证成功  -->
  <view class='auth-success' wx:if="{{strStatus=='已认证'}}">

    <text class='text-doctor-success'>恭喜您，认证通过!</text>
    <view class='auth-img-p'>
      <image class='center-img margin-top-10' bindtap='previewImage' data-url='{{authimage}}' src="{{authimage}}"></image>
    </view>
  </view>


  <!--认证中  -->
  <view class='auth-ing' wx:if="{{strStatus=='认证中'}}">
    <view class='view-top'>
      <image class='service-head' src='../../../assets/images/userinfo/service_head.png' background-size="cover"></image>
      <text class='text-doctor'>医生您好:</text>
    </view>

    <view class='view-center'>
      <text class='hint-center'> 您的个人信息正在审核认证中，如需修改请直接联系客服。</text>
       <view class='auth-img-p'> 
        <image class='center-img margin-top-10' bindtap='previewImage' data-url='{{authimage}}' src="{{authimage}}"></image>
       </view> 
      <!-- <image class='auth-img' src="{{authimage}}" bindtap='previewImage' data-url='{{authimage}}'></image> -->
    </view>

    <view class='call-p'>
      <image class='cerfity-phone' src='../../../assets/images/userinfo/cerfity_phone.png' background-size="cover"></image>
      <text class='text-phone' bindtap='callMobile'>400-618-2535</text>
    </view>
  </view>

</view>