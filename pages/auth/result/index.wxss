/* pages/auth/result/index.wxss */

.container {
  padding: 10px;
}

.service-head {
  width: 50px;
  height: 50px;
}

/*认证成功  */

.auth-success {
  display: flex;
  flex-direction: column;
  justify-content: center;
  vertical-align: middle;
  
}

.view-top {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  align-items: center;
  justify-content: flex-start;
}

.text-doctor-success{
  display: flex;
  justify-content: center;
  vertical-align: middle;
  font-size: 16px;
  color: black;
}
.auth-img-p{
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
   width: 100%;
}
.margin-top-10{
  margin-top: 10px;
}

.center-img {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  height: 400rpx;
  background-color: white;
  border-radius: 6px;
  border: 2px solid white;
}

.text-doctor {
  font-size: 14px;
  margin-left: 10px;
  color: black;
}

.hint-center {
  font-size: 14px;
  margin-top: 10px;
  color: black;
}

.view-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  vertical-align: middle;
}

.auth-img {
  width: 240px;
  height: 120px;
  background-color: transparent;
  margin-top: 10px;
  margin-bottom: 20px;
  border-radius: 4px;
  border: 1px solid white;
}

.call-p {
  display: flex;
  padding-top: 5px;
  padding-bottom: 5px;
  justify-content: center;
  flex-direction: row;
  background-color: #f3be26;
  border-radius: 20px;
  margin-top: 20px;
  border: 0.5px solid #f3be26;
}

.cerfity-phone {
  width: 26px;
  height: 26px;
}

.text-phone {
  font-size: 16px;
  color: white;
  margin-left: 10px;
}
