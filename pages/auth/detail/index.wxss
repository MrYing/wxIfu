/* pages/auth/detail/index.wxss */
.container{
  display: flex;
  justify-content: center;
  flex-direction: column;
  vertical-align: middle;
}

.top-text{
  display: flex;
  justify-content: center;
  vertical-align: middle;
  font-size: 14px;
  color: #7B7B7B;
  margin: 10px;
  background-color: #F0F0F0
}

.center-img{
  display: flex;
  width: 100%;
  height: 400rpx;
  background-color: white;
}

.btnSubmit {
    display: flex;
    justify-content: center;
    font-size: 16px;
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
    margin-right: 10px;
    color: white;
    padding: 3px;
    background-color: #F3BE26;
    text-align: center;
    border-radius: 24px;
    border: 1px #F3BE26 solid;
    margin-top: 20px;
}
.btnSubmit-disable{
  display: flex;
    justify-content: center;
    font-size: 16px;
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
    margin-right: 10px;
    color: #999999;
    padding: 3px;
    background-color: #F0F0F0;
    text-align: center;
    border-radius: 24px;
    border: 1px #F3BE26 solid;
    margin-top: 20px;
}